# Server
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# Database (Postgres from docker-compose)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/vas?schema=public

# Redis (from docker-compose)
REDIS_URL=redis://localhost:6379

# JWT secrets (change for production)
JWT_SECRET=replace-with-strong-secret
JWT_REFRESH_SECRET=replace-with-strong-refresh-secret

# S3/MinIO (optional for future media uploads)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=media
S3_REGION=us-east-1
